<h1>UNCC Recipes Book</h1>

<nav id="topNav">
    <ul>
    <li><%= link_to 'Welcome', controller: 'welcome' %></li>
    <li><%= link_to 'New Recipe', controller: 'guides', action: 'new' %></li>
    <li><%= link_to 'Recipe List', controller: 'guides' %></li>
    </ul>
</nav>

<br><br>

<div id="showRecipe"
<p>

<%= image_tag @guide.image.url(:thumb) %><br>
<strong>Recipe Name</strong>
<%= @guide.name %>
<br>
<strong>Author:</strong>
<%= @guide.author %>
<br>
<strong>Difficulty:</strong>
<%= @guide.difficulty %>
<br>
<strong>Ingredients:</strong>
<%= @guide.ingredients %>
<br>

<h2>Steps</h2>
<% @guide.tasks.each do |task| %>
<p>
<%= task.body %>
</p>
<% end %>

<br>

<h2>Comments</h2>
<% @guide.comments.each do |comment| %>
<p id="comment">
    Commenter Name:
    <font color="#BA0056"><%= comment.commenter %></font>
</p>
<p id="comment">
    Comment:
    <font color="#BA0056"><%= comment.body %></font>
</p>
<p id="deleteButton">
    <%= link_to 'Delete Comment', [comment.guide, comment],
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
</p>
<% end %>

<h2>Add a Comment:</h2>
<%= form_for([@guide, @guide.comments.build]) do |f| %>
<p id="comment">
    <%= f.label :commenter %>
    <%= f.text_field :commenter %>
    
</p>
<p id="comment">
    <%= f.label :body %>
    <%= f.text_area :body %>
</p>


<p>
    <%= f.submit %>
</p>
<% end %>
<%= link_to 'Back', guides_path %>
</div>

<footer>
<%= "\u00A9" "2017 BitsPlease" %>
</footer>